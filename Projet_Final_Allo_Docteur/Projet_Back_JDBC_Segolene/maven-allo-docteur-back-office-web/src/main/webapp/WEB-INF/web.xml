    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>RdvServlet</servlet-name>
        <url-pattern>/RdvServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LoginServlet</welcome-file>
    </welcome-file-list>
</web-app>
