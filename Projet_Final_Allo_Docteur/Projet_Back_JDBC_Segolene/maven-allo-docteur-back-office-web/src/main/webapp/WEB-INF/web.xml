    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeMedecinServlet</servlet-name>
        <url-pattern>/HomeMedecinServlet</url-pattern>
    </servlet-mapping>  
    <servlet-mapping>
        <servlet-name>FindPatientServlet</servlet-name>
        <url-pattern>/FindPatientServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoMedecinServlet</servlet-name>
        <url-pattern>/InfoMedecinServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RdvMedecinServlet</servlet-name>
        <url-pattern>/RdvMedecinServlet</url-pattern>
